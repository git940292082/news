<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:animation="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CollectionActivity" >

    <TextView
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/ic_item_bg"
        android:gravity="center"
        android:text="我的收藏"
        android:textColor="#fff"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/collecion_back"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:padding="8dp"
        android:src="@drawable/back" />
    <ListView
        android:id="@+id/lv_collection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view1"
        android:divider="@null"
        android:scrollbars="@null"
        >
    </ListView>

    <Button
        android:id="@+id/collection_btn_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/view1"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@null"
        android:text="清除收藏"
        android:textColor="#fff"
        android:textSize="16sp"
        android:layout_marginRight="10dp" />

</RelativeLayout>