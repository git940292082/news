<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_margin="5dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_news_item_image"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_gif_full" />

    <RelativeLayout
        android:id="@+id/iv_news_item_content"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="2"
        android:padding="2dp" >

        <TextView
            android:id="@+id/tv_news_item_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingRight="10dp"
            android:textColor="#000"
            android:text="女演员称有郭姓前任衣食独守空房迪斯科浪费精力宽松" />

        <TextView
            android:id="@+id/tv_news_item_source"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/tv_news_item_title"
            android:gravity="bottom"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="网易娱乐"
            android:textColor="@color/Color.Main.a"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_news_item_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/tv_news_item_title"
            android:text="评论1000"
            android:textSize="10sp"
            android:textColor="@color/Color.Main.a" />
        
    </RelativeLayout>
	<ImageButton 
	    android:id="@+id/news_item_fenxiang"
	    android:layout_width="30dp"
	    android:layout_height="30dp"
	    android:src="@drawable/ic_fenxiang"
	    android:scaleType="centerInside"
	    android:background="@null"/>
	
</LinearLayout>